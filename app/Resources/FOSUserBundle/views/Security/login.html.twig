{% extends "FOSUserBundle::layout.html.twig" %}


{% block fos_user_head %}
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">
    <link href="{{ asset ('css/signin.css') }}" rel="stylesheet"/>

{% endblock fos_user_head %}


  {% block fos_user_content %}

      <div class="container">
          {% if error %}
              <div class="col-md-4 col-md-offset-4 text-center alert alert-warning">
                  {{ error.messageKey|trans(error.messageData, 'security') }}
                  <a href="{{ path('fos_user_resetting_request') }}">Forgot password?</a>
              </div>
          {% endif %}
      </div>

      <div class="container">

          <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
              <h2 class="form-signin-heading text-center">Login:</h2>

              <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

              <label for="inputEmail" class="sr-only">Login</label>
              <input type="text" id="username" class="form-control" name="_username" placeholder="Login"
                     value="{{ last_username }}" required="required"/>

              <label for="inputPassword" class="sr-only">Password</label>
              <input type="password" class="form-control" id="password" name="_password" placeholder="Password"
                     required="required"/>

              <div class="checkbox">
                  <label for="remember_me">
                      <input type="checkbox" name="_remember_me" id="remember_me" value="on"> Remember me
                  </label>
              </div>
              <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
              <div>
                  Are you new? <a href="/register">Register...</a>
              </div>
          </form>

      </div>
  {% endblock fos_user_content %}
